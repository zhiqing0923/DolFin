<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DolfinLoginSignUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="switchBtn">
        <item name="colorAccent">@color/blue90</item>
    </style>

    <!--Light mode-->
    <!--Screen background if light mode on-->
    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Button background if light mode on -->
    <style name="BUTTON">
        <item name = "android:background">@color/blue_700</item>
    </style>


</resources>