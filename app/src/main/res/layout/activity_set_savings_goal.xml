<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setSavingsGoal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".SetSavingsGoal">

    <ImageView
        android:id="@+id/bluebackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bluebackground" />

    <TextView
        android:id="@+id/TVSetSavingsGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Set Savings Goal"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bluebackground" />

    <Button
        android:id="@+id/BtnSetNewSavingsGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="368dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_semibold"
        android:paddingLeft="50dp"
        android:paddingTop="12dp"
        android:paddingRight="50dp"
        android:paddingBottom="12dp"
        android:text="Set New Savings Goal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#015794"
        android:textSize="16sp"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluebackground"
        app:strokeColor="#015794"
        app:strokeWidth="2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVSetSavingsGoal" />

</androidx.constraintlayout.widget.ConstraintLayout>