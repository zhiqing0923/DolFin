<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/savingsGoalDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavingGoalDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bluebackground" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="1000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whitebackground" />

    <TextView
        android:id="@+id/TVGoalAmount"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Goal Amount"
        android:textColor="#19679E"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circularProgressBar" />

    <TextView
        android:id="@+id/TVStartDate2"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/inter"
        android:text="Start Date"
        android:textColor="#414141"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount" />

    <TextView
        android:id="@+id/TVEndDate2"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter"
        android:text="End Date"
        android:textColor="#414141"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVStartDate2" />

    <TextView
        android:id="@+id/TVRemaining"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Remaining"
        android:textAlignment="center"
        android:textColor="#19679E"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circularProgressBar" />

    <TextView
        android:id="@+id/TVSavingsGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Savings Goal"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="TextView"
        android:textColor="#015794"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVGoalAmount" />

    <TextView
        android:id="@+id/TVRemaining2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/inter_bold"
        android:text="TextView"
        android:textColor="#015794"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVRemaining" />

    <ImageButton
        android:id="@+id/BtnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plusicon"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/inter_semibold"
        android:text="TextView"
        android:textColor="#414141"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TVStartDate2"
        app:layout_constraintTop_toBottomOf="@+id/TVRemaining2" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="@font/inter_semibold"
        android:text="TextView"
        android:textColor="#414141"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/TVEndDate2"
        app:layout_constraintTop_toBottomOf="@+id/startDate" />

    <ProgressBar
        android:id="@+id/circularProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="246dp"
        android:layout_height="212dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="52dp"
        android:indeterminateOnly="false"
        android:progressBackgroundTint="#8EA6B6"
        android:progressDrawable="@drawable/circular_progressbar"
        android:progressTint="#015794"
        android:rotation="-90"
        app:layout_constraintBottom_toTopOf="@+id/TVGoalAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVSavingsGoal" />

    <ImageView
        android:id="@+id/IVDolphin"
        android:layout_width="140dp"
        android:layout_height="155dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/dolphin2"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>